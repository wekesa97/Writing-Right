<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:textColor="#000000"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="Author's Last Name"
                android:textColor="#000000"
                android:textSize="17sp" />
                <EditText
                    android:id="@+id/idTxtActivity0"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:inputType="textPersonName"
                    android:fontFamily="Arial"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_centerHorizontal="true"
                    android:hint="LAST NAME:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="Author's First Name"
                android:textColor="#000000"
                android:textSize="17sp" />
                <EditText
                    android:id="@+id/idTxtActivity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:fontFamily="Arial"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_centerHorizontal="true"
                    android:hint="FIRST NAME:"
                    android:maxLines="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="Title of the Book "
                android:textColor="#000000"
                android:textSize="17sp" />

                <EditText
                    android:id="@+id/idTxtActivity2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:fontFamily="Arial"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_centerHorizontal="true"
                    android:hint="BOOK TITLE:"
                    android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="Year"
                android:textColor="#000000"
                android:textSize="17sp" />
                <EditText
                    android:id="@+id/idTxtActivity3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:ems="10"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:inputType="number"
                    android:hint=" YEAR:"
                    android:textSize="25sp"
                    android:maxLines="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="City"
                android:textColor="#000000"
                android:textSize="17sp" />
                <EditText
                    android:id="@+id/idTxtActivity4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:ems="10"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:inputType="textPersonName"
                    android:hint="CITY:"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="Publisher"
                android:textColor="#000000"
                android:textSize="17sp" />
                <EditText
                    android:id="@+id/idTxtActivity5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint=" PUBLISHER:eg. Oxford University Press"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_centerHorizontal="true"
                    android:textSize="19sp"
                    android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:textStyle="bold"
                android:text="Page Number(s)"
                android:textColor="#000000"
                android:textSize="17sp" />
                <EditText
                    android:id="@+id/idTxtActivity6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Arial"
                    android:background="#ffffff"
                    android:ems="10"
                    android:textColor="#000000"
                    android:hint=" PAGE NUMBER(S):eg 11"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/activity_vertical_margin"/>
            <Button
                android:id="@+id/idbtnActivity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="#cccccc"
                android:fontFamily="Arial"
                android:layout_below="@+id/idTxtActivity4"
                android:onClick="btnClickAct1"
                android:text="GO TO NEXT"
                android:textSize="29sp" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>


