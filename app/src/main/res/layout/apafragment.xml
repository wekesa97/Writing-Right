<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:text="@string/fragment_name_apa"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="#999999"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:background="#ffffff"
                android:fontFamily="Arial"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="13dp"
                android:text="@string/first_apa"
                android:textColor="#000000"
                android:textSize="17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title page in APA style"
                android:layout_centerHorizontal="true"
                android:fontFamily="Arial"
                android:textColor="#000000"
                android:autoLink="web"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tooltipText="First page of APA"
                android:src="@drawable/title_apa"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="Citing two authors in APA"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:fontFamily="Arial"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                />
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/two_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="In APA when citing two authors"
                android:src="@drawable/two_authors_apa"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textColor="#000000"
                android:text="Citing authors that have already been mentioned in APA"
                android:layout_centerHorizontal="true"
                android:fontFamily="Arial"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                />
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/mentioned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="In APA when citing authors that have already been mentioned"
                android:src="@drawable/cite_already_mentioned"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:autoLink="web"
                android:fontFamily="Arial"
                android:textColor="#000000"
                android:textSize="17sp"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/last_apa"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bibliography in APA"
                android:textColor="#000000"
                android:autoLink="web"
                android:layout_centerHorizontal="true"
                android:fontFamily="Arial"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                />
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/biblio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="Bibliography in APA"
                android:src="@drawable/biblio_apa"/>

        </LinearLayout>




    </ScrollView>

</RelativeLayout>